<!DOCTYPE html>
<html>

{{> head }}

<body>
<div class="ui grid">
    <div class="navi-wrapper two wide column">
        <div class="navi-wrapper-content">
            {{> logo }}
            <div class="primary-list">
                <h3>Records</h3>
                <ul>
                    {{#each module.records}}
                        <li>
                            <a href="{{name}}.html">{{name}}</a>
                        </li>
                    {{/each}}
                </ul>
            </div>
            <div class="ui divider"></div>
            {{> currentModule }}
            {{> allModules }}
        </div>
    </div>

    <div class="fourteen wide column content-wrapper">
        <div class="main-wrapper">
            <h1>Record : <span class="records">{{ record.name }}</span></h1>
            <div class="ui divider"></div>

            <p>{{{ record.description }}}</p>

            <h2>Fields</h2>
            <div class="ui divider"></div>
            <div class="constants">
                <table class="ui table">
                    <thead>
                    <tr>
                        <th>Field Name</th>
                        <th>Data Type</th>
                        <th>Default Value</th>
                        <th>Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#if record}}
                        {{#record}}
                            {{#each fields}}
                                <tr>
                                    <td>{{ name }}</td>
                                    <td>{{ type.name }}</td>
                                    <td>{{ defaultValue }}</td>
                                    <td>{{{ description }}}</td>
                                </tr>
                            {{/each}}
                        {{/record}}
                    {{/if}}
                    </tbody>
                </table>
            </div>
            <div class="ui divider"></div>
        </div>
    </div>
</div>
</body>
