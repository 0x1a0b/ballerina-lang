<!DOCTYPE html>
<html>

{{> head }}

<body>
<div class="ui grid">
    <div class="navi-wrapper two wide column">
        <div class="navi-wrapper-content">
            {{> logo }}
            <div class="primary-list">
                <h3>Errors</h3>
                <ul>
                    {{#each module.errors}}
                        <li>
                            <a href="#{{name}}">{{name}}</a>
                        </li>
                    {{/each}}
                </ul>
            </div>
            <div class="ui divider"></div>
            {{> currentModule }}
            {{> allModules }}
        </div>
    </div>

    <div class="fourteen wide column content-wrapper">
        <div class="main-wrapper">
            <h1>Errors</h1>
            <div class="ui divider"></div>
            <div class="errors">
                <table class="ui table param-table">
                    <thead>
                    <tr>
                        <th width="20%">Name</th>
                        <th width="20%">Detail Type</th>
                        <th width="35%">Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each errors}}
                        <tr id="{{ name }}">
                            <td>{{ name }}</td>
                            <td>{{#if detailType }}{{{ typeName detailType }}}{{/if}}</td>
                            <td>{{{ description }}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</body>
