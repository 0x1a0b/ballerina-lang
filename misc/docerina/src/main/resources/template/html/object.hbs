<!DOCTYPE html>
<html>

{{> head }}

<body>
<div class="ui grid">
    <div class="navi-wrapper two wide column">
        <div class="navi-wrapper-content">
            {{> logo }}
            <div class="primary-list">
                <h3>Objects</h3>
                <ul>
                    {{#each module.objects}}
                        <li>
                            <a href="{{name}}.html">{{name}}</a>
                        </li>
                    {{/each}}
                </ul>
            </div>
            <div class="ui divider"></div>
            {{> currentModule }}
            {{> allModules }}
        </div>
    </div>

    <div class="fourteen wide column content-wrapper">
        <div class="main-wrapper">
            <h1>Objects : <span class="objects">{{ object.name }}</span> </h1>
            <div class="ui divider"></div>
            <p>{{{ object.description }}}</p>

            <div class="constants">
                {{#if object.initMethod}}
                    {{#object.initMethod}}
                       {{> initMethod }}
                    {{/object.initMethod}}
                {{/if}}

                {{#if object.otherMethods}}
                    <h2>Methods</h2>
                    <div class="ui divider"></div>
                    <div class="method-list">
                        {{#each object.otherMethods}}
                            {{> methodSignature }}
                        {{/each}}
                    </div>
                    <div class="ui divider"></div>
                {{/if}}

                {{#if object.fields}}
                    <h2>Fields</h2>
                    <div class="ui divider"></div>
                    {{#each object.fields}}
                        {{> field }}
                    {{/each}}
                {{/if}}

                {{#if object.otherMethods }}
                    <h2>Methods</h2>
                    <div class="ui divider"></div>
                    {{#each object.otherMethods }}
                        {{> method }}
                    {{/each}}
                {{/if}}
            </div>
            <div class="ui divider"></div>
        </div>
    </div>
</div>
</body>
