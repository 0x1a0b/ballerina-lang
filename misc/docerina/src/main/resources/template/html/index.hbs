<!DOCTYPE html>
<html>

{{> head }}

<body>
    <div class="navi-wrapper" > 
      <div class="navi-wrapper-content">
          {{> logo }}
      </div>
    </div>
     <div class="ui vertical sidebar menu">
        <div class="navi-wrapper-sidebar">
            <div class="navi-wrapper-content">
                {{> logo }}
            </div>
        </div>
    </div>
    <div class="content-wrapper pusher">
        <div>
            <a class="toc item"> <img src="html-template-resources/images/menu.svg"></a>
        </div>
      <div class="main-wrapper">
        <h1>Modules</h1>
        <div>
          <table class="ui table">
             {{#if project.modules}}
            <tbody>
             {{#each project.modules}}
              <tr>
                <td class="module-title modules"><a href="{{id}}/index.html">{{id}}</a></td>
                <td class="module-desc">{{{ summary }}}</td>
              </tr>
              {{/each}}
            </tbody>
            {{/if}}
          </table>
        </div>
      </div>
    </div>
  </div>
</body>

{{> footer }}
