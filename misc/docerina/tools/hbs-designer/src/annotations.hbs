<!DOCTYPE html>
<html>

{{> htmlHead title="API Documentation - Module Annotations " rootPath="../../" }}

<body>
  <div class="ui grid">
    <div class="navi-wrapper two wide column">
      <a href="../../index.html">
        <img class="logo" src="../../images/ballerina-logo.png">
      </a>
      <div class="primary-list">
        <h3>Annotations</h3>
        <ul>
          {{#each annotations}}
          <li>
            <a href="#{{name}}">{{name}}</a>
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="ui divider"></div>
      {{> currentModule rootPath="../../" }}
      {{> allModules rootPath="../../" }}
    </div>

    <div class="fourteen wide column content-wrapper">
      <div class="main-wrapper">
      <h1>Annotations</h1>
      <div class="ui divider"></div>
      <div class="constants">
        <table class="ui table">
          <tbody>
            {{#each annotations}}
            <tr>
              <td class="annotations"><a href="#{{name}}">{{name}}</a></td>
              <div class="ui divider param-divider"></div>
              <td>{{description}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        <div>
          {{#if annotations}}
          <div>
            <table class="ui table">
              <p>Name</p>
              <thead>
                {{#each annotations}}
                <tr>
                  <th>Name</th>
                  <th>Attachment Points</th>
                  <th>Data Type</th>
                  <th>Description</th>
                </tr>
                {{/each}}
              </thead>
              <tbody>
                {{#each annotations}}
                <tr>
                  <td>{{name}}</td>
                  <td>{{data_type}}</td>
                  <td>{{default_value}}</td>
                  <td>{{description}}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
    </div>
  </div>
</body>
