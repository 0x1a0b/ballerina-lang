<!DOCTYPE html>
<html>

{{> htmlHead title="API Documentation - Module Annotations " rootPath="../../" }}

<body>
  <div class="ui grid">
    <div class="navi-wrapper two wide column">
      <a href="../../index.html">
        <img class="logo" src="../../images/ballerina-logo.png">
      </a>
      <div class="primary-list">
        <h3>Annotations</h3>
        <ul>
          {{#each annotations}}
          <li>
            {{name}}
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="ui divider"></div>
      {{> currentModule rootPath="../../" }}
      {{> allModules rootPath="../../" }}
    </div>

    <div class="fourteen wide column content-wrapper">
      <h1>Annotations</h1>
      <div class="ui divider"></div>
      <div class="constants">
        <table class="ui table">
          <tbody>
            {{#each annotations}}
            <tr>
              <td class="annotations"><a href="#{{name}}">{{name}}</a></td>
              <td>{{description}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        <div>
          {{#if annotations}}
          <div>
            <table class="ui table">
              <p>{{fields.name_label}}</p>
              <thead>
                {{#each annotations}}
                {{#if fields}}
                {{#each fields}}
                <tr>
                  <th>{{name_label}}</th>
                  <th>{{attachment_points_label}}</th>
                  <th>{{data_type_label}}</th>
                  <th>{{description_label}}</th>
                </tr>
                {{/each}}
                {{/if}}
                {{/each}}
              </thead>
              <tbody>
                {{#each annotations}}
                <tr>
                  <td>{{name}}</td>
                  <td>{{data_type}}</td>
                  <td>{{default_value}}</td>
                  <td>{{description}}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</body>