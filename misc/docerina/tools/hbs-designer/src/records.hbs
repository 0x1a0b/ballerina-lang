<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <title>API Documentation</title>
  <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
  <link rel="stylesheet" href="../../styles/css/styles.css">
  <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
</head>

<body>
  <div class="ui grid">
    <div class="navi-wrapper two wide column">
      <img class="logo" src="../../images/ballerina-logo.png">
      <div class="primary-list">
        {{#if all.modules}}
        <ul>
          {{#each all.modules}}
            {{#if constructs}}
              {{#each constructs}}
                {{#if records}}
                  {{#each records}}
                    <li>
                      {{name}}
                    </li>
                  {{/each}}
                {{/if}}
              {{/each}}
            {{/if}}
          {{/each}}
        </ul>
        {{/if}}
      </div>
      <div class="primary-list">
        <h3>{{id}}</h3>
        {{#if all.modules}}
        <ul>
          {{#each all.modules}}
          {{#if constructs}}
          {{#each constructs}}
          <li>
            <a href="../index.html#{{@key}}">{{@key}}</a>
          </li>
          {{/each}}
          {{/if}}
          {{/each}}
        </ul>
        {{/if}}
        <div class="ui divider"></div>
      </div>
    </div>

    <div class="fourteen wide column content-wrapper">
      <h1>{{ rec.name }}</h1>
      <div class="ui divider"></div>

      <h3>{{rec.type}} <span class="records">{{rec.name}}</span> {{rec.label}}</h3>
      <p>{{rec.description}}</p>

      <div class="constants">
        <table class="ui table">
          <thead>
            <tr>
              <th>{{rec.label_field_name}}</th>
              <th>{{rec.label_data_type}}</th>
              <th>{{rec.label_default_value}}</th>
              <th>{{rec.label_description}}</th>
            </tr>
          </thead>
          <tbody>
            {{#if rec}}
            {{#rec}}
            {{#each fields}}
            <tr>
              <td>{{field_name}}</td>
              <td>{{data_type}}</td>
              <td>{{default_value}}</td>
              <td>{{description}}</td>
            </tr>
            {{/each}}
            {{/rec}}
            {{/if}}
          </tbody>
        </table>
      </div>
      <div class="ui divider"></div>
    </div>
  </div>
</body>