<idea-plugin version="2">
    <id>org.ballerinalang</id>
    <name>Ballerina</name>
    <version>0.1</version>
    <category>Custom Languages</category>
    <vendor email="support@wso2.org" url="http://wso2.org">WSO2 Inc.</vendor>

    <description><![CDATA[
      Plugin for Ballerina language.<br>
      <br>
      Visit <a href="http://ballerinalang.org">BallerinaLang.org</a> for more details.
    ]]></description>

    <change-notes><![CDATA[
      <ul>
        <li>Syntax highlighting support.</li>
        <li>Code formatting support.</li>
      </ul>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <fileTypeFactory implementation="org.ballerinalang.BallerinaFileTypeFactory"/>
        <lang.parserDefinition language="Ballerina" implementationClass="org.ballerinalang.BallerinaParserDefinition"/>
        <lang.commenter language="Ballerina" implementationClass="org.ballerinalang.BallerinaCommenter"/>
        <lang.syntaxHighlighterFactory language="Ballerina"
                                       implementationClass="org.ballerinalang.highlighter.BallerinaSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="org.ballerinalang.highlighter.BallerinaColorSettingsPage"/>
        <lang.formatter language="Ballerina"
                        implementationClass="org.ballerinalang.formatter.BallerinaFormattingModelBuilder"/>

        <internalFileTemplate name="Ballerina Application"/>
        <internalFileTemplate name="Ballerina File"/>

        <defaultTemplatePropertiesProvider
                implementation="org.ballerinalang.actions.BallerinaTemplatePropertiesProvider"/>

    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="Ballerina.NewBallerinaFile" class="org.ballerinalang.actions.BallerinaCreateFileAction"
                text="Ballerina File" description="Create new Ballerina file">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
        </action>
    </actions>

</idea-plugin>
