#if (${PACKAGE_NAME} && ${PACKAGE_NAME} != "")
package ${PACKAGE_NAME};
#end

import ballerina.net.http;
import ballerina.lang.messages;
import ballerina.lang.system;

connector MyClient (string url) {

    http:ClientConnector clientConnector = create http:ClientConnector(url);

    action connect (string path) (message) {
        message request = {};
        message response = clientConnector.get(path, request);
        return response;
    }
}

function main (string[] args) {
    MyClient myClient = create MyClient("http://example.com");
    message response = myClient.connect("");
    system:println(messages:getStringPayload(response));
}
