<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>ballerina-composer-parent</artifactId>
        <groupId>org.ballerinalang</groupId>
        <version>0.95.1-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>composer-services-parent</artifactId>
    <name>Ballerina Composer - Services Parent</name>
    <packaging>pom</packaging>
    <modules>
        <module>fs-service</module>
        <module>log-service</module>
        <module>file-content-service</module>
    </modules>
    <dependencies>
        <dependency>
            <groupId>org.ballerinalang</groupId>
            <artifactId>composer-server-core</artifactId>
            <version>0.95.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.msf4j</groupId>
            <artifactId>msf4j-core</artifactId>
            <version>2.5.0</version>
            <exclusions>
                <exclusion>
                    <groupId>org.slf4j</groupId>
                    <artifactId>slf4j-log4j12</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <!-- Generate JAVA SPI configs -->
            <plugin>
                <groupId>org.bsc.maven</groupId>
                <artifactId>maven-processor-plugin</artifactId>
                <version>${mvn.processor.plugin.version}</version>
                <configuration>
                    <processors>
                        <processor>org.ballerinalang.composer.server.processor.ComposerServiceProcessor</processor>
                    </processors>
                </configuration>
                <executions>
                    <execution>
                        <id>process</id>
                        <goals>
                            <goal>process</goal>
                        </goals>
                        <phase>generate-sources</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <properties>
        <maven.findbugsplugin.version.exclude></maven.findbugsplugin.version.exclude>
        <mvn.processor.plugin.version>2.2.4</mvn.processor.plugin.version>
    </properties>
</project>